Bootstrap: docker
From: alpine:3.19

%post
    apk update
    apk upgrade
    apk add gcompat
    apk add git make
    apk add bash curl openjdk8-jre-base perl zlip-dev

    cd /usr/local/bin
    curl -fsSL 'https://github.com/marbl/canu/releases/download/v2.2/canu-2.2.Darwin-amd64.tar.xz' | tar -xJ
    find /usr/local/bin/canu-2.2 -maxdepth 3 -perm /u=x -type f -exec ln -s {} /usr/local/bin/ \;

%labels
    Maintainer mjf
    Version canu-2.2
